{
  "name": "ecommerce-integration-tests",
  "version": "1.0.0",
  "description": "Integration tests for e-commerce microservices",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "integration-tests",
    "ecommerce",
    "microservices"
  ],
  "author": "E-commerce Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "axios": "^1.6.0",
    "jest": "^29.5.0",
    "mongodb": "^6.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/*.test.ts"],
    "testTimeout": 60000,
    "setupFilesAfterEnv": ["<rootDir>/setup.ts"]
  }
}
