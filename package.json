{
  "name": "ecommerce-microservices",
  "version": "1.0.0",
  "description": "E-commerce microservices system with comprehensive testing",
  "main": "index.js",
  "scripts": {
    "test": "node test-runner.js",
    "test:docker": "./run-tests-docker.sh",
    "test:ci": "docker-compose up -d && sleep 60 && npm test && docker-compose down",
    "start": "docker-compose up -d",
    "stop": "docker-compose down",
    "restart": "docker-compose restart",
    "logs": "docker-compose logs -f",
    "build": "docker-compose build",
    "health": "curl -s http://localhost:3001/health && curl -s http://localhost:3002/health && curl -s http://localhost:3003/health && curl -s http://localhost:3004/health"
  },
  "keywords": [
    "microservices",
    "ecommerce",
    "nodejs",
    "typescript",
    "mongodb",
    "rabbitmq",
    "testing",
    "integration-tests",
    "nigerian-naira"
  ],
  "author": "E-commerce Team",
  "license": "MIT",
  "devDependencies": {
    "axios": "^1.6.0",
    "jest": "^29.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ecommerce-microservices.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/ecommerce-microservices/issues"
  },
  "homepage": "https://github.com/your-org/ecommerce-microservices#readme"
}
